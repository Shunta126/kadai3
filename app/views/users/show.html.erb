<%= render 'user', user: @user %>

<%= render 'book', book: @book %>

<h1>Books</h1>
<table>
  <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
  <% @books.each do |book| %>
<tr>
<td><% if book.image.attached? %>
    <%= image_tag book.image, size: "90x100" %>
  <% else %>
    <%= image_tag 'no_image', size: "90x100" %>
  <% end %><br>
  <%= link_to "user.name", user_path(@user.id) %>
  </td>
<td><%= link_to "book.title", book_path(@books.id) %></td>
<td><%= book.body %></td>
</tr>
<% end %>
