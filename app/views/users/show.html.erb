<div class="container px-5 px-sm-0">
  <div class="row">
     <div class="col-md-3">
      <%= render 'books/list', book: @book, user: current_user %>
      </div>

 <div class="col-md-8 offset-md-1">
<h1>Books</h1>
<table class="table table-hover">
  <tr>
    <th></th>
    <div class="mx-auto">
    <th>Title</th>
    <th>Opinion</th>
    </div>
  </tr>
  <% @books.each do |book| %>
<tr>
<td><% if book.profile_image.attached? %>
    <%= image_tag book.profile_image, size: "90x100" %>
  <% else %>
    <%= image_tag 'no_image', size: "90x100" %>
  <% end %><br>
  <%= link_to @user.name, user_path(@user.id) %>
  </td>
<td><%= link_to @book.title, book_path(book.id) %></td>
<td><%= book.body %></td>
</tr>
<% end %>
</div>
</table>
</div>
</div>