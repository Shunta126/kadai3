<h1>User info</h1>
<table>
  <tr>
    <th>name</th>
    <th><%= @users.name %></th>
  </tr>
  <tr>
    <th>introduction</th>
    <th><%= @users.introduction %></th>
  </tr>
</table>

<p><%= link_to "edit", edit_user_path(current_user) %></p>

<h1>New Book</h1>
<%= form_with model: @book do |f| %>
<p>Title</p>
<%= f.text_field :title %>
<p>Opinion</p>
 <%= f.text_area :body %>
<p><%= f.submit 'Create Book' %></p>
<% end %>

<h1>Books</h1>
<table>
  <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
  <% @books.each do |book| %>
<tr>
<td>写真</td>
