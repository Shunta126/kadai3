<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
     <%= render 'list', book: @book, user: @user %>
    </div>

<div class="col-md-8 offset-md-1">
<h1>Book detail</h1>
<table class="table table-hover">
    <tr>
        <td><% if @book.profile_image.attached? %>
    <%= image_tag @book.profile_image, size: "90x100" %>
  <% else %>
    <%= image_tag 'no_image', size: "90x100" %>
  <% end %><br>
  <%=  @user.name %>
  </td>
        <td><%= link_to @book.title, book_path(@book.id) %></td>
        <td><%= @book.body %></td>
        <% if @book.user == current_user %>
        <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success" %></td>
        <td>
          <%= link_to "Destroy", book_path(@book.id), class: "btn btn-sm btn-danger",  method: :delete, "data-confirm" => "本当に削除しますか？" %>
          <% end %>
        </td>
    </tr>

</table>
</div>

 </div>
</div>